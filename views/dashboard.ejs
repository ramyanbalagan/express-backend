<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Dashboard</h2>
    <a href="/register" class="btn btn-primary mb-3">Go to Registration</a>
    <h4>Users List</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Phone</th>
          <th scope="col">Email</th>
          <th scope="col">Profession</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.phone %></td>
            <td><%= user.email %></td>
            <td><%= user.profession %></td>
            <td>
              <a href="/edit/<%= user._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
